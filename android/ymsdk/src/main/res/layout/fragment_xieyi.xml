<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="@dimen/ym_content_width"
        android:layout_height="@dimen/ym_content_heigth"
        android:layout_centerInParent="true"
        android:background="@mipmap/ym_bg"
        android:orientation="vertical">

        <include layout="@layout/ym_view_title" />

        <LinearLayout
            android:layout_width="@dimen/ym_content_width"
            android:layout_height="match_parent" >

            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/ym_im_large"
                android:layout_width="@dimen/ym_xieyicontext_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/ym_margin10"
                android:layout_marginEnd="@dimen/ym_margin10"
                android:layout_marginTop="@dimen/ym_padding"
                android:paddingBottom="@dimen/ym_padding"
                android:layout_marginBottom="@dimen/ym_padding"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>