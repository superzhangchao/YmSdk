<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="258dp"
    android:layout_height="110dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_im_bird"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ym_bird01"/>

    <RelativeLayout
        android:layout_width="258dp"
        android:layout_height="17dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/ym_loading_grid_01"/>
        <ImageView
            android:id="@+id/bg_im_grid"
            android:layout_width="248dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/ym_loading_grid_02"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="83dp"
            android:layout_height="24dp"
            android:src="@mipmap/ym_loading_text"/>
        <ImageView
            android:id="@+id/im_pot"
            android:layout_width="22dp"
            android:layout_height="7dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="1dp"
            android:background="@mipmap/ym_pot01"/>
    </LinearLayout>
