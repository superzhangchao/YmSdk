<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE2FF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_init"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="初始化" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="登入" />

            <Button
                android:id="@+id/bt_logout"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="登出" />

            <Button
                android:id="@+id/bt_pay"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="支付" />

            <Button
                android:id="@+id/bt_sendinfo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="数据上报" />

            <Button
                android:id="@+id/bt_status"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="获取实名状态" />

            <Button
                android:id="@+id/bt_guestrealnane"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="展示游客实名" />

            <Button
                android:id="@+id/bt_guestrealnane2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="展示游客实名，时间上限" />
            <Button
                android:id="@+id/bt_testnet1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="测试网络访问" />
            <Button
                android:id="@+id/bt_testnet2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="测试网络访问2" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号信息"
        android:textColor="@android:color/holo_red_light" />
</LinearLayout>